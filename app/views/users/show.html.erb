<main>
  <%= render '/user_card', user: @user %>
  <div class="my-3">
    <h3>Bio</h3>
    <p><%= @user.bio %></p>
  <div>
  <div>

    <div class="row gap-2">
      <% @user.three_most_recent_posts.each do |post| %>
        <a class="text-decoration-none" href="<%= @user.id %>/posts/<%= post.id %>">
          <%= render '/post_card', post: %>
        <a>
      <% end %>
    </div>
    <div class="d-flex justify-content-center">
      <a class="btn btn-primary" href="<%= @user.id %>/posts">See more</a>
    </div>
  </div>
</main>
